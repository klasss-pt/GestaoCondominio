@model GestaoCondominios.ViewModels.RegistoViewModel
@{
    Layout = null;
    ViewData["Title"] = "Registo de Moradores";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width-device-width">
    <title>Novo Morador</title>

    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
</head>
<body class="corpo">

    <div class="registoform">
        <div class="center-align">
            <h4><i class="large material-icons">account_circle </i></h4>
            <h5>Novo Morador</h5>
        </div>

        <div>
            <form asp-action="Registo" enctype="multipart/form-data">
                <div class="campos">
                    <div class="red-text text-darken-4" asp-validation-summary="ModelOnly"></div>


                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Nome" class="validate" id="Nome" />
                            <label asp-for="Nome" id="Nome"></label>
                            <span asp-validation-for="Nome" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Contribuinte" class="validate" id="Contribuinte" />
                            <label asp-for="Contribuinte" id="Contribuinte"></label>
                            <span asp-validation-for="Contribuinte" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Telefone" class="validate" id="Telefone" />
                            <label asp-for="Telefone" id="Telefone"></label>
                            <span asp-validation-for="Telefone" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="file-field input-field col s12">
                            <div class="btn-small">
                                <span>Selecione a sua Fotografia</span>
                                <input asp-for="Foto" type="file" class="validate" id="foto"/>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text"/>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Email" class="validate" type="email" id="Email" />
                            <label asp-for="Email" id="Email"></label>
                            <span asp-validation-for="Email" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="Password" class="validate" type="password" id="Password" />
                            <label asp-for="Password" id="Password"></label>
                            <span asp-validation-for="Password" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input asp-for="PasswordConfirmada" class="validate" type="password" id="PasswordConfirmada" />
                            <label asp-for="PasswordConfirmada" id="PasswordConfirmada"></label>
                            <span asp-validation-for="PasswordConfirmada" class="red-text text-darken-4"></span>
                        </div>
                    </div>

                </div>

                <div class="botoes">
                    <button type="submit" class="waves-effect waves-light btn-small green darken-4">Registar</button> &emsp;
                    <a asp-controller="Utilizadores" asp-action="Login">Já possuo uma conta</a>
                </div>

            </form>
        </div>
    </div>




    <environment include="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
        <script src="~/js/IniciarMarcaras.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>
        <script src="~/js/IniciarMarcaras.js"></script>
    </environment>
</body>
</html>
